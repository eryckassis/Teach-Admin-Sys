{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"], // Garante o uso de ponto e vírgula
    "quotes": ["error", "double"], // Força o uso de aspas duplas
    "no-unused-vars": ["warn"], // Emite um aviso para variáveis não utilizadas
    "no-console": ["warn"], // Emite um aviso para o uso de console.log
    "no-undef": "error", // Erro para variáveis não definidas
    "eqeqeq": ["error", "always"], // Exige uso de === e !==
    "curly": ["error", "all"], // Exige uso de chaves em blocos condicionais
    "indent": ["error", 2], // Exige indentação com 2 espaços
    "comma-dangle": ["error", "never"] // Proíbe vírgula final em objetos/arrays
  }
}
